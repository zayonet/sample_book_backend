{
  "openapi": "3.0.0",
  "info": {
    "title": "API para registar de livros e Autores",
    "description": "Este API tem como obejectivo registar diferentes livros de vários Autores com preços e descrição assim como apagar-los e edita-los. Isto para usuários autenticados no sistema.",
    "termsOfService": "http://localhost:3333/terms",
    "contact": {
      "name": "API Support",
      "email": "zayocode@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/api/vi",
      "description":"API para teste"
    }
  ],
  "paths": {
    "/users":{
      "post":{
        "summary": "Registar Utilizador",
        "description": "Este rota é a responsável por registrar livro",
        "tags": ["Users"],
        "requestBody":{
          "content":{
            "application/json": {
              "schema":{
                "$ref": "#/components/schemas/User"
              },
              "exemples": {
                "user":{
                  "summary": "An example of a user",
                  "values":{
                    "id": "b233382a-2670-4178-acf2-869c630a448b",
                    "name": "John Lupy",
                    "email": "Ejohn.lupy@exemplo.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "401":{
            "description": "Credenciais inválidas/Não autorizado"
          },
          "404":{
            "description": "Livro não encontrado"
          },
          "200":{
            "description": "OK",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "$ref":"#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/get":{
      "get":{
        "summary": "Exibir Utilizador",
        "description": "Buscar todos utilizadores registados no sistema",
        "tags": ["Users"]
      }
    },
    "/users/{id}":{
      "get":{
        "summary": "Utilizador pelo ID",
        "description": "Buscar um utilizadores registado no sistema atravez de ID do utilizador",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Exibir o Utilizador pelo ID",
            "require": true
          }
        ]
      },
      "responses":{
        "404":{
          "description": "Utilizador não encontrado"
        },
        "200":{
          "description": "OK",
          "content":{
            "application/json":{
              "schema":{
                "type": "object",
                "$ref":"#/components/schemas/User"
              }
            }
          }
        }
      }
    },
    "/books":{
      "post":{
        "summary": "Registar livro",
        "description": "Este routa é a responsável por registrar livro",
        "tags": ["Books"],
        "security": [{ "bearerAuth": [] }],
        "requestBody":{
          "content":{
            "application/json": {
              "schema":{
                "$ref": "#/components/schemas/Book"
              },
              "exemples": {
                "book":{
                  "summary": "An example of a book",
                  "values":{
                    "id": "b233382a-2670-4178-acf2-869c630a448b",
                    "title": "About Python 3",
                    "price": "23.6",
                    "description": "Novas aplicações e referença da linguagem Python",
                    "image": "python-book.jpg",
                    "status": 1
                  }
                }
              }
            }
          }
        },
        "responses":{
          "401":{
            "description": "Credenciais inválidas/Não autorizado"
          },
          "404":{
            "description": "Livro não encontrado"
          },
          "200":{
            "description": "OK",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "$ref":"#/components/schemas/Book"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties":{
          "id": {
            "type":"string"
          },
          "name": {
            "type":"string"
          },
          "email": {
            "type":"string"
          },
          "password": {
            "type":"string"
          }
        }
      },
      "Book": {
        "type": "object",
        "properties":{
          "id": {
            "type":"string"
          },
          "title": {
            "type":"string"
          },
          "price": {
            "type":"string"
          },
          "description": {
            "type":"string"
          },
          "image": {
            "type":"string"
          },
          "status": {
            "type":"boolean"
          }
        }
      }
    },
    "securitySchemes":{
      "bearerAuth":{
        "type": "http",
        "scheme": "bearer",
        "bearerFormat":"JWT"
      }
    }
  }
}